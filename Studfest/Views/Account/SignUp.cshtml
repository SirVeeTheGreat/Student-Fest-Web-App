@model Studfest.Models.SignUp

@{
    ViewData["Title"] = "SignUp";
    Layout = null;

}
<link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css">
<link rel="stylesheet" href="~/css/login.css">



<div class="main">

    <!-- Sign up form -->
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign up</h2>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form method="POST" asp-action="SignUp" asp-controller="Account" class="register-form" id="register-form">
                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input type="text" asp-for="Name" placeholder="Your Name" />
                        </div>
                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-email"></i></label>
                            <input type="email" asp-for="Email"  placeholder="Your Email" />
                        </div>
                        <div class="form-group">
                            <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                            <input type="password" asp-for="Password" id="pass" placeholder="Password" />
                        </div>
                        <div class="form-group">
                            <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                            <input type="password" asp-for="ConfirmPassword" id="re_pass" placeholder="Confirm password" />
                        </div>
                       
                        <div class="form-group form-button">
                            <input type="submit" id="signup" class="form-submit" value="Register" />
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="~/images/signup-image.jpg" alt="sing up image"></figure>
                    <a asp-action="Login" class="signup-image-link">I am already member</a>
                </div>
            </div>
        </div>
    </section>
</div>